<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KickRoll.App.Views.SessionDetailPage"
             Title="課表詳情">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="{Binding TeamName}" FontSize="24" FontAttributes="Bold" />
            <Label Text="📍 地點：" FontAttributes="Bold"/>
            <Label Text="{Binding Location}" />

            <Label Text="🕒 開始時間：" FontAttributes="Bold"/>
            <Label Text="{Binding StartAt}" />

            <Label Text="🕒 結束時間：" FontAttributes="Bold"/>
            <Label Text="{Binding EndAt}" />

            <Label Text="👥 人數上限：" FontAttributes="Bold"/>
            <Label Text="{Binding CapacityDisplay}" />

            <!-- Enrollment Section -->
            <Label Text="--- 報名功能 ---" FontSize="20" FontAttributes="Bold" />
            
            <Label x:Name="LoadingLabel" Text="載入會員名單中..." IsVisible="False" />
            <StackLayout x:Name="ErrorPanel" IsVisible="False" Orientation="Horizontal">
                <Label x:Name="ErrorLabel" Text="❌ 載入會員名單失敗" TextColor="Red" />
                <Button x:Name="RetryButton" Text="重試" Clicked="OnRetryClicked" />
            </StackLayout>
            
            <Entry x:Name="SearchEntry" 
                   Placeholder="搜尋會員姓名..." 
                   TextChanged="OnSearchTextChanged" 
                   IsEnabled="False" />
            
            <Picker x:Name="MemberPicker" 
                    Title="選擇會員" 
                    ItemDisplayBinding="{Binding Name}"
                    SelectedIndexChanged="OnMemberPickerSelectedIndexChanged" 
                    IsEnabled="False" />
            
            <HorizontalStackLayout Spacing="10">
                <Button x:Name="EnrollButton" 
                        Text="報名" 
                        BackgroundColor="Green" 
                        TextColor="White"
                        Clicked="OnEnrollClicked" />
                
                <Button x:Name="CancelButton" 
                        Text="取消報名" 
                        BackgroundColor="Orange" 
                        TextColor="White"
                        Clicked="OnCancelEnrollmentClicked" />
            </HorizontalStackLayout>

            <Label x:Name="EnrollmentResultLabel" TextColor="Blue" />

            <Label Text="📌 狀態：" FontAttributes="Bold"/>
            <Label Text="{Binding Status}" TextColor="Green"/>

            <Label Text="--- 點名 ---" FontSize="20" FontAttributes="Bold" />

            <CollectionView x:Name="MembersCollection"
                            IsVisible="False">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                            <Label Text="{Binding Name}" VerticalOptions="Center" />
                            <CheckBox IsChecked="{Binding IsPresent}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- 沒有成員時顯示 -->
            <Label x:Name="NoMembersLabel"
                   Text="⚠️ 此隊伍尚無成員"
                   TextColor="OrangeRed"
                   FontAttributes="Bold"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Button Text="提交點名" Clicked="OnSubmitAttendanceClicked" />
            <Label x:Name="ResultLabel" TextColor="Red" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
