<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KickRoll.App.Views.AddMemberPage"
             Title="新增成員">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="新增成員" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,20"/>
        
        <Label Text="姓名 *" FontAttributes="Bold"/>
        <Entry x:Name="NameEntry" Placeholder="請輸入成員姓名" />
        <Label x:Name="NameValidationLabel" TextColor="Red" FontSize="12" IsVisible="False"/>
        
        <Label Text="電話 *" FontAttributes="Bold"/>
        <Entry x:Name="PhoneEntry" Placeholder="請輸入電話號碼" Keyboard="Telephone"/>
        <Label x:Name="PhoneValidationLabel" TextColor="Red" FontSize="12" IsVisible="False"/>
        
        <VerticalStackLayout Spacing="10" Margin="0,30,0,0">
            <Button x:Name="SaveButton" Text="新增成員" Clicked="OnSaveMemberClicked" 
                    BackgroundColor="#2196F3" TextColor="White"/>
            <Button x:Name="CancelButton" Text="取消" Clicked="OnCancelClicked" 
                    BackgroundColor="#757575" TextColor="White"/>
        </VerticalStackLayout>
        
        <Label x:Name="ResultLabel" TextColor="Red" HorizontalOptions="Center" Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>