<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KickRoll.App.MainPage"
             Title="KickRoll">

    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

        <Label Text="🏆 KickRoll 管理系統"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- 新增隊別 -->
        <Button Text="➕ 新增隊別" 
                Clicked="OnAddTeamClicked" />

        <!-- 新增課表 -->
        <Button Text="➕ 新增課表"
                Clicked="OnAddSessionClicked" />

        <!-- 課表列表 -->
        <Button Text="📋 課表列表"
                Clicked="OnSessionsListClicked" />

        <Button Text="👥 成員列表"
                Clicked="OnMembersListClicked"/>
    </VerticalStackLayout>
</ContentPage>